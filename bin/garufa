#!/usr/bin/env ruby

require 'goliath/runner'
require 'garufa'

module Garufa
  runner = Goliath::Runner.new(ARGV, GarufaApp.new)
  runner.app = Goliath::Rack::Builder.build(GarufaApp, runner.api)

  if runner.daemonize
    runner.log_file ||= './garufa.log'
    runner.pid_file ||= './garufa.pid'
  end

  runner.run
end
